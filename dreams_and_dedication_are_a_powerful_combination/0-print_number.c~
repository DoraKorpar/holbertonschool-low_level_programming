#include "my_functions.h"
#include <stdio.h>

void print_number_positive(int n)
{
  int divide;
  int digits;
  int subtract;
  int power;

    while (n > 0)
     {
      divide = n;
      digits = 0;

      /* this while loop determines the power of ten of the first digit of the number input. divide is the integer to be printed. digits is the power of ten  */  
      while (divide > 9)
	{
	  divide = (divide / 10);
	  digits++;
	}

      /* this prints the first digit of the number, adding ascii for 0 */
      print_char(divide + 48);
          
      /* this for loop multiplies out the power of 10 stored in digits */
      /* for (power = 1; digits > 0; digits--)
	{
	  power = (power * 10);
	  } */
      power = 1;
      while (digits > 0)
	{
	  power = (power * 10);
	  digits--;
	}

      subtract = (divide * power);
      n = (n - subtract);
    }
}

void print_number(int n)
{
  if (n > 0)
    {
      print_number_positive(n);
    }
  else if (n == 0)
    {
      print_char('0');
    }
  else
    {
      print_char('-');
      print_number_positive((n * -1));
    }
}
